class Solution:
    def triangleNumber(self, nums):
        nums.sort()
        n = len(nums)
        count = 0

        for k in range(n - 1, 1, -1):  # Fix the largest side
            i, j = 0, k - 1
            while i < j:
                if nums[i] + nums[j] > nums[k]:
                    count += (j - i)   # all pairs between i..j-1 work
                    j -= 1
                else:
                    i += 1
        return count
