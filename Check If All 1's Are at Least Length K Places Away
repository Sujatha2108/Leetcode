from typing import List

class Solution:
    def kLengthApart(self, nums: List[int], k: int) -> bool:
        prev = -10**9  # a very small sentinel so first 1 doesn't fail
        for i, v in enumerate(nums):
            if v == 1:
                # number of zeros between this 1 and previous 1 is (i - prev - 1)
                if i - prev - 1 < k:
                    return False
                prev = i
        return True
