class Solution:
    def smallestNumber(self, n: int) -> int:
        # Find smallest k such that (1 << k) - 1 >= n
        k = 1
        while (1 << k) - 1 < n:
            k += 1
        return (1 << k) - 1

# quick tests
if __name__ == "__main__":
    s = Solution()
    print(s.smallestNumber(5))   # 7
    print(s.smallestNumber(10))  # 15
    print(s.smallestNumber(3))   # 3
    print(s.smallestNumber(1))   # 1
    print(s.smallestNumber(1000))# 1023
