class Solution:
    def numWaterBottles(self, numBottles: int, numExchange: int) -> int:
        # total bottles you can drink
        total = numBottles  
        empty = numBottles  # initially all drunk bottles are empty
        
        # keep exchanging as long as you have enough empty bottles
        while empty >= numExchange:
            new_full = empty // numExchange  # how many new bottles you get
            total += new_full  # add to total drunk bottles
            empty = empty % numExchange + new_full  # leftover empty + newly drunk empty
        
        return total
