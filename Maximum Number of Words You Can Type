class Solution:
    def canBeTypedWords(self, text: str, brokenLetters: str) -> int:
        broken = set(brokenLetters)   # store broken letters in a set
        words = text.split()          # split the sentence into words
        count = 0
        
        for word in words:
            # check if word contains any broken letter
            if not any(ch in broken for ch in word):
                count += 1
                
        return count
