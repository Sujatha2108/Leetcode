from typing import List

class Solution:
    def minCost(self, colors: str, neededTime: List[int]) -> int:
        n = len(colors)
        if n <= 1:
            return 0

        total_cost = 0
        # We'll scan and group consecutive same colors
        group_sum = neededTime[0]
        group_max = neededTime[0]

        for i in range(1, n):
            if colors[i] == colors[i - 1]:
                # extend current group
                group_sum += neededTime[i]
                if neededTime[i] > group_max:
                    group_max = neededTime[i]
            else:
                # finish previous group: remove all except the max
                total_cost += group_sum - group_max
                # start new group
                group_sum = neededTime[i]
                group_max = neededTime[i]

        # account for last group
        total_cost += group_sum - group_max

        return total_cost
