from math import gcd
from typing import List

class Solution:
    def replaceNonCoprimes(self, nums: List[int]) -> List[int]:
        stack = []
        
        for num in nums:
            stack.append(num)
            # Keep merging while the last two are non-coprime
            while len(stack) > 1:
                a, b = stack[-2], stack[-1]
                g = gcd(a, b)
                if g == 1:  # coprime -> stop
                    break
                # Merge
                lcm = a * b // g
                stack.pop()
                stack[-1] = lcm
        
        return stack
